<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/userpostlayout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userpostprofileimg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/default_userimg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="2dp"
            android:gravity="center_vertical"
            android:orientation="vertical">



            <TextView
                android:id="@+id/postuserprofile_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:hint="Username"
                android:textColor="@color/toolbar1"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/postuser_date"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_margin="10dp"
                android:hint="Date"
                android:textColor="@color/toolbar1"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/postuser_time"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_margin="10dp"
                android:hint="Time"
                android:textColor="@color/toolbar1"
                android:textSize="12sp"
                android:layout_marginTop="5dp"/>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"

            />

    </LinearLayout>



</RelativeLayout>