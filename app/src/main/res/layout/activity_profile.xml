<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#7bb661">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:elevation="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"

            >
            <Button
                android:id="@+id/profile_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"

                 android:layout_marginLeft="5dp"
                app:backgroundTint="#8BC34A"
                 />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:id="@+id/profile_image"
        android:src="@drawable/default_userimg"


        >

    </de.hdodenhof.circleimageview.CircleImageView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="40dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/profile_full_name"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_id_icon"
        android:hint="Full Name"
        android:background="@drawable/profile_textviews_new"

        android:drawablePadding="12dp"

        android:gravity="center"
        android:textColor="@color/toolbar1"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/profile_username"
        android:layout_margin="10dp"
        android:hint="Username"
        android:drawableStart="@drawable/ic_user_icon"
        android:textSize="16sp"
        android:drawablePadding="12dp"
android:background="@drawable/profile_textviews_new"
        android:gravity="center"
        android:textColor="@color/toolbar1"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/profile_email"
        android:layout_margin="10dp"
        android:hint="Email"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_mail_icon"
        android:textSize="16sp"
       android:layout_marginTop="10dp"
android:background="@drawable/profile_textviews_new"
        android:gravity="center"
        android:textColor="@color/toolbar1"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/profile_phone"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:background="@drawable/profile_textviews_new"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_phone_icon"
        android:hint="Phone Number"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingEnd="12dp"
        android:paddingStart="12dp"
        android:textColor="@color/toolbar1"
        />
</LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</ScrollView>