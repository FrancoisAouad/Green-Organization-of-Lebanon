<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".writeActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/splash_background">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:elevation="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Post Today to Update everyone in the community!"
                android:textColor="#7bb661"
                android:textSize="20sp"
                android:textStyle="bold"

                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/writeposttext"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/new_register_edit_text"
android:padding="20dp"
                    android:gravity="left"
                    android:hint="Write post here..."
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textColorHint="#C6B7B7" />

                <Button
                    android:id="@+id/writepostbutton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/button_background"
                    android:text="Post"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    app:backgroundTint="#8BC34A">

                </Button>
                <Button
                    android:id="@+id/writepostback"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/cancel_button"
                    android:text="X"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    app:backgroundTint="#F44336"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</ScrollView>

</FrameLayout>